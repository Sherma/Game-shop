@model ShopCartViewModel

<div class="container">
    @foreach(var el in Model.shopCart.ListShopItems)
    {
        <div class="alert alert-warning mt-3">
            <b>Гра:</b>@el.game.gamename<br />
            <b>Ціна:</b>@el.game.price.ToString("c")
        </div>
    }
    <hr />
    <a class="btn btn-danger" asp-controller="order" asp-action="Checkout">Оплатити</a>
</div>