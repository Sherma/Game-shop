@model Shop.Data.Models.Game

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.img" alt="@Model.gamename" />
    <h2>@Model.gamename</h2>
    <p>@Model.shortdesc</p>
    <p>Ціна: @Model.price.ToString("c")</p>
    <p><a class="btn btn-warning" asp-controller="ShopCart" asp-action="addToCart" asp-route-id="@Model.id">Додати в кошик</a></p>
</div>